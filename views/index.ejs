<% include header.ejs %>
<div class="table-wrapper">
    <% if (contacts.length > 0) {%>
    <table class="table table-hovered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Profession</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% contacts.forEach((contact, index) => { %>
            <tr>
                <th scope="row"><%= contact.id %></th>
                <td><%= contact.nameFirst %></td>
                <td><%= contact.nameLast %></td>
                <td><%= contact.profession %></td>
                <td><a href="/view/<%= contact.id %>" target="_blank" rel="noopener"
                        class="btn btn-sm btn-success">View</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <p class="text-center">No contacts found. Go <a href="/add">here</a> to add contacts.</p>
    <% } %>
</div>
</div>
</body>

</html>