<% include header.ejs %>
    <div class="table-wrapper">
        <% if (contacts.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Middle Name</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Street Address</th>
                        <th scope="col">City</th>
                        <th scope="col">State</th>
                        <th scope="col">Zip Code</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">Profession</th>
                    </tr>
                </thead>
                <tbody>
                    <% contacts.forEach((contact, index) => { %>
                        <tr>
                            <th scope="row"><%= player.id %></th>
                            <td><img src="/assets/img/<%= player.image %>" class="rounded-circle player-img" alt=""></td>
                            <td><%= contact.nameFirst %></td>
                            <td><%= contact.nameLast %></td>
                            <td><%= contact.profession %></td> 
                            <td>
                                <a href="/view/<%= contact.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">View</a>                                
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No contacts found. Go <a href="/add" >here</a> to add contacts.</p>
        <% } %>
    </div>
</div>
</body>
</html>
