<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-contact-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="nameFirst" id="nameFirst" placeholder="First Name" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="nameLast" id="nameLast" placeholder="Last Name" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="profession" id="profession" placeholder="Profession" required>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary float-right">Add Contact</button>
        </form>
    </div>
</div>
</body>
</html>
